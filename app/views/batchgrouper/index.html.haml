= simple_form_for @batchgrouper, :url => "batchgrouper", :remote => true do |f|
  = render "shared/system", :f => f, :system_id => @batchgrouper.system_id, :house => @batchgrouper.house
  %fieldset
    %legend File
    = f.file_field :file
  %fieldset
    %legend Single group
    = f.text_field :single_group
    .right
      = link_to('Single group', 'single_group', :class => 'button', :method => :post, :remote => true)
  #progressbar
  .right
    = f.submit :class => "button positive"
- if @groupings
  %fieldset
    - @groupings.each do |g|
      %br
      = g