= content_for :header do
  = javascript_include_tag 'tarpsy_batchgrouper_query'

h2 = t('tarpsy.batchgrouper.title')
= raw t('tarpsy.batchgrouper.documentation')

== render "shared/error_messages", :errors => @tarpsy_batchgrouper_query.errors

= simple_form_for @tarpsy_batchgrouper_query, url: tarpsy_batchgrouper_queries_path,
                  defaults: {placeholder: false, hint: false} do |f|
  = render 'shared/tarpsy_system', f: f
  fieldset
    legend = t('tarpsy.batchgrouper.data')
    = f.input :mb_input
    br
    = f.input :honos_input
  #loading
    = t "batchgrouper.loading_hint"
    #loading-bar
  .buttons
    .right
      = f.submit :class => "button positive"