- if @webgrouper_patient_case.errors.any?
  .errorflash
    %h2
      = t 'errors.template.body'
    %ul
      - @webgrouper_patient_case.errors.each do |attr, msg|
        %li
          = t("simple_form.labels.defaults." + attr.to_s) + " " + msg

- if flash[:error].present?
  .errorflash
    = flash[:error]

- if flash[:info].present?
  .info
    = flash[:info]

- if flash[:popup].present?
  .flash-popup{ title: flash[:popup][:title]}
    = simple_format flash[:popup][:body]