.on-row
  %fieldset#grouping.result.left
    %legend= t "result.grouping"
    %table
      %tbody
        %tr
          %th
            MDC:
          %td
            = @result.mdc
          %td    
        %tr
          %th
            DRG:
          %td
            = @result.drg
          %td
            = (DRG.find_by_DrCode @result.get_drg).DrName
        %tr
          %th
            PCCL:
          %td
            = @result.pccl
          %td
            
        %tr
          %th
            = t("result.grouperstatus")
          %td
            = @result.gst.ordinal
          %td
            = t("result.grouperstatus_modes." + @result.gst.to_s)
  
  %fieldset#cost-weight.result.right
    %legend= t "result.cost-weight"
    %table
      %tbody
        %tr
          %th
            = t "result.baserate"
          %td
            = @base_cost_weight     
        %tr
          %th
            = t "result.effective-cost-weight"
          %td
            = @cost_weight.effective_cost_weight.to_f/@factor
        %tr
          %th
            = t "result.surcharge-rate-per-day"
          %td
            = @weighting_relation.surcharge_per_day.to_f/@factor
        %tr
          %th
            = t "result.number-of-days-for-surcharge-or-discount"
          %td
            = @webgrouper_patient_case.los - @weighting_relation.first_day_surcharge + 1
             
%fieldset#diagnoses.result
  %legend= t "result.diagnoses"
  %table
    %tbody
      %tr
        %th.small-col
          = t("result.code")
        %th
          = t("result.name")
        %th.medium-col
          = t("result.valid")
        %th.small-col
          = t("result.used")
        %th.small-col
          = t("result.CCL")
      %tr
        %td
          = ICD.pretty_code_of(@webgrouper_patient_case.pdx)
        %td
          = ICD.find_by_IcShort(ICD.short_code_of(@webgrouper_patient_case.pdx)).IcName
        %td
          = t("result.diagnosis_flags.valid." + @result.pdx_diagnosis_flag.valid.to_s)
        %td
          = @result.pdx_diagnosis_flag.used
        %td
          = @result.pdx_diagnosis_flag.ccl
      - counter = 0
      - @webgrouper_patient_case.diagnoses.each do |diag|
        %tr
          %td
            = diag
          %td
            = ICD.find_by_IcCode(diag).IcName
          %td
            = t("result.diagnosis_flags.valid." + @result.diagnoses_flags[counter].valid.to_s)
          %td
            = t("result.diagnosis_flags.valid." + @result.diagnoses_flags[counter].used.to_s)
          %td
            = @result.diagnoses_flags[counter].ccl
        - counter = counter + 1
          
%fieldset#procedures.result
  %legend= t "result.procedures"
  %table
    %tbody
      %tr
        %th.small-col
          = t("result.code")
        %th
          = t("result.name")
        %th.medium-col
          = t("result.valid")
        %th.medium-col
          = t("result.used")
        %th.medium-col
          = t("result.or-nor")
      - counter = 0
      - @webgrouper_patient_case.procedures.each do |proc|
        - proc_pretty_code = proc.split(":")[0]
        - proc_db_entry = OPS.find_by_OpCode(proc_pretty_code)
        %tr
          %td
            = proc_pretty_code
          %td
            = proc_db_entry.OpName
          %td
            = t("result.procedures_flags.valid." + @result.procedures_flags[counter].valid.to_s)
          %td
            = t("result.procedures_flags.used." + @result.procedures_flags[counter].used.to_s)
          %td
            = t("result.procedures_flags.or-nor." + @result.procedures_flags[counter].por.to_s)
        - counter = counter + 1
            
%fieldset#length-of-stay.result.left
  %legend= t "result.length-of-stay"
  %table
    %tbody
      %tr
        %th
          = t("result.length-of-stay")
        %td
          = @webgrouper_patient_case.los
      %tr
        %th
          = t("result.average-los")
        %td
          = @weighting_relation.avg_duration.to_f/@factor
      %tr
        %th
          = t("result.first-day-with-discount")
        %td
          = @weighting_relation.first_day_discount
      %tr
        %th
          = t("result.first-day-with-surcharge")
        %td
          = @weighting_relation.first_day_surcharge
      %tr
        %th
          = t("result.first-day-with-discount")
        %td
          = @weighting_relation.first_day_discount
      %tr
        %th
          = t("result.case-flag")
        %td
          = @cost_weight.case_flag
          
%fieldset#los-chart.result.left
  %legend= t "result.los-chart"
  Gogo single magic!